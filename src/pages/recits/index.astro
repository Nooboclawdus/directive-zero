---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const recits = await getCollection('recits');
const sorted = recits.sort((a, b) => a.data.order - b.data.order);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title="Récits" description="Nouvelles et récits dans l'univers de Directive Zéro">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <span class="font-[var(--font-heading)] text-xs tracking-[0.2em] uppercase text-[var(--color-crimson)]">Transmissions interceptées</span>
      <h1 class="font-[var(--font-heading)] text-4xl font-bold text-white tracking-wider uppercase mt-2 mb-4">Récits</h1>
      <p class="text-[var(--color-text-secondary)] max-w-2xl">
        Nouvelles et récits situés dans l'univers de Directive Zéro. 
        Des fragments de vies d'agents, de mondes surveillés et de choix impossibles.
      </p>
    </div>

    <div class="space-y-4">
      {sorted.map((recit) => (
        <a href={`${base}/recits/${recit.id}`} class="block group">
          <div class="p-6 bg-[var(--color-bg-secondary)] border border-[var(--color-border)] rounded-lg hover:border-[var(--color-crimson)] hover:shadow-lg hover:shadow-[var(--color-crimson-glow)] transition-all">
            <div class="flex items-start justify-between gap-4">
              <div>
                <div class="flex items-center gap-3 mb-2">
                  {recit.data.type && (
                    <span class="font-[var(--font-heading)] text-[10px] tracking-[0.15em] uppercase px-2 py-0.5 rounded border border-[var(--color-crimson)]/30 text-[var(--color-crimson)] bg-[var(--color-crimson-glow)]">
                      {recit.data.type}
                    </span>
                  )}
                  {recit.data.readingTime && (
                    <span class="text-xs text-[var(--color-text-muted)]">
                      {recit.data.readingTime}
                    </span>
                  )}
                </div>
                <h2 class="font-[var(--font-heading)] text-lg tracking-wider uppercase text-white group-hover:text-[var(--color-crimson)] transition-colors">
                  {recit.data.title}
                </h2>
                {recit.data.description && (
                  <p class="text-sm text-[var(--color-text-secondary)] mt-2 leading-relaxed">{recit.data.description}</p>
                )}
              </div>
              <span class="shrink-0 text-[var(--color-text-muted)] group-hover:text-[var(--color-crimson)] transition-colors text-lg mt-1">→</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
